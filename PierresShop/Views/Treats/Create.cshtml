@{
  Layout = "_Layout";
}

@model PierresShop.Models.Treat

<h2>Add a New Treat</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
  @Html.LabelFor(model => model.Ingredients)
  @Html.TextBoxFor(model => model.Ingredients, new { @class = "form-control", @required = "required"})
  @Html.LabelFor(model => model.GlutenFree)
  @Html.CheckBoxFor(model => model.GlutenFree, new { @class = "form-control" }, @required = "required")
  

  <input type="submit" value="Create Treat">
}